@model EntityLayer.Concrete.Vehicle
@{
    ViewData["Title"] = "VehicleAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">ARAÇ EKLEME SAYFASI</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <form class="form-group" method="post" enctype="multipart/form-data">


        <div class="row">
            <div class="col-12 col-sm-6">

                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Firma Bilgileri</h3>
                    </div>
                    <div class="card-body">
                        <!-- Date dd/mm/yyyy -->
                        <div class="form-group">
                            <label>Firma Adı:</label>

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-laptop"></i></span>
                                </div>
                                @Html.DropDownListFor(x => x.CompanyId, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" })
                            </div>
                            <!-- /.input group -->
                        </div>



                        <div class="form-group">
                            <label>Plaka:</label>

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-laptop"></i></span>
                                </div>
                                @Html.TextBoxFor(x => x.VehiclePlaka, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.VehiclePlaka)
                            </div>
                            <!-- /.input group -->
                        </div>
                        <!-- /.form group -->
                        <!-- Date mm/dd/yyyy -->
                        <div class="form-group">
                            <div class="input-group">
                                <label>AraçModel:</label>
                                <div class="input-group">

                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                    </div>
                                    @Html.TextBoxFor(x => x.VehicleModel, new { @class = "form-control" })

                                </div>
                            </div>
                            <!-- /.input group -->
                        </div>
                        <!-- /.form group -->
                        <!-- phone mask -->
                        <div class="form-group">
                            <label>AraçTip:</label>

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-book"></i></span>
                                </div>
                                @Html.TextBoxFor(x => x.VehicleTip, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.VehicleTip)
                            </div>
                            <!-- /.input group -->
                        </div>


                        <!-- /.form group -->
                        <!-- phone mask -->
                        <div class="form-group">
                            <label>HGS:</label>

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-calculator"></i></span>
                                </div>
                                @Html.TextBoxFor(x => x.VehicleHGS, new { @class = "form-control" })

                            </div>
                            <!-- /.input group -->
                        </div>

                        <div class="form-group">
                            <label>AraçMarka:</label>

                            <div class="form-group">
                                <div class="input-group">
                                    <label>Dekont Belge Yükle:</label>
                                    <input type="file" name="VehicleImage" multiple class="form-control" />
                                </div>
                                <!-- /.input group -->
                            </div>
                            <!-- /.input group -->
                        </div>



                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            <!-- /.col -->
            <div class="col-12 col-sm-6">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Adres Bilgileri</h3>
                    </div>
                    <div class="card-body">
                        <!-- Date dd/mm/yyyy -->
                        <!--<div class="form-group">
                    <label>İlçe:</label>

                    <div >
                        <div >
                            <span ><i class="fas fa-laptop"></i></span>
                        </div>
                       Html.DropDownListFor(x=>x.CompanyId,(List<SelectListItem>)ViewBag.cv,new { class = "form-control" })

                    </div>-->
                        <!-- /.input group -->
                        <!--</div>-->
                        <div class="form-group">
                            <label>Adres:</label>

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="far fa-list-alt"></i></span>
                                </div>
                                @Html.TextAreaFor(x => x.VehicleTip, new { @class = "form-control" })

                            </div>
                            <!-- /.input group -->
                        </div>
                        <!-- /.form group -->
                        <!-- Date mm/dd/yyyy -->
                        <div class="form-group">
                            <label>Firma Kategori:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                </div>
                                @Html.TextBoxFor(x => x.VehicleHGS, new { @class = "form-control" })
                                <!-- /.input group -->
                            </div>
                            <!-- /.form group -->
                            <!-- phone mask -->
                        </div>

                        <div class="form-group">
                            <label> Araç Dara:</label>

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                </div>
                                @Html.TextBoxFor(x => x.VehicleDara, new { @class = "form-control" })
                            </div>
                            <!-- /.input group -->
                        </div>
                        <div class="form-group">
                            <label>İzin Bitiş Tarihi:</label>

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-calculator"></i></span>
                                </div>
                                @Html.TextBoxFor(x => x.VehicleIzinBitis, new { @class = "form-control", type = "date" })

                            </div>
                            <!-- /.input group -->
                        </div>
                        <div class="form-group">
                            <label>IMEI NO:</label>

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-calculator"></i></span>
                                </div>
                                @Html.TextBoxFor(x => x.VehicleIMEI, new { @class = "form-control" })

                            </div>
                            <!-- /.input group -->
                        </div>


                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.form-group -->
            </div>
            <!-- /.col -->
        </div>
        <button class="btn btn-info" style="margin-left:600px;"> + Firmayı Kaydet</button>
        <br />
    </form>
        <!-- /.row -->



      
