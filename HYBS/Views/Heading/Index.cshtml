@using EntityLayer.Concrete
@model List<Heading>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card card-success card-outline">
    <div class="card-header">
        <h3 class="card-title" style="color:blue"><b> ŞİKAYET LİSTESİ</b>  <a href="/Heading/AddHeading" class="badge btn-success" style="margin-left:900px;font-size:18px;"> +Şikayet Ekle</a></h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Firma</th>

                    <th>Telefon</th>
                    <th>AraçPlaka</th>
                    <th>İşlem tarihi</th>
                    <th>Adres/Mahalle</th>
                    <th>Ada/Parsel</th>
              

                    <th>Düzenle</th>
                    <th>Yapılan işlem</th>
                    <th>Açıklama</th>
                    <th>Sil</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model)
                {
                <tr>
                    <td><b> @k.HeadingName</b></td>


                    <td>@k.Phone</td>

                    <td>@k.VehiclePlaka</td>
                    <td>
                        @(((DateTime)
                          k.HeadingDate).ToString("dd-MMM-yyyy"))
                    </td>
                    <td>@k.HeadingAdres</td>
                    <td>@k.HeadingAda/@k.HeadingParsel</td>



                    <td>
                        <a href="/Heading/EditHeading/@k.HeadingID" class="badge btn-primary" style="font-size: 14px;">ŞikayetiDüzenle</a>


                    </td>
                    <td>
                        <a href="/Content/ContentByHeading/@k.HeadingID" class="badge btn-success" style="font-size: 14px;">Yapılan işlemler</a>


                    </td>


                    <td>
                        <a class="badge btn-dark btn-sm" style="font-size:15px;" href="/Content/AddContent/@k.HeadingID">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Açıklama yaz
                        </a>
                    </td>


                    <td>

                        <a href="/Heading/DeleteHeading/@k.HeadingID" class="badge btn-danger" style="font-size: 15px;" , new { onclick="return confirm('Silmek istiyor musunuz?')" }>Sil</a>
                    </td>




                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Firma</th>

                    <th>Telefon</th>
                    <th>AraçPlaka</th>
                    <th>İşlem tarihi</th>
                    <th>Adres/Mahalle</th>
                    <th>Ada/Parsel</th>


                    <th>Düzenle</th>
                    <th>Yapılan işlem</th>
                    <th>Açıklama</th>
                    <th>Sil</th>

                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>


