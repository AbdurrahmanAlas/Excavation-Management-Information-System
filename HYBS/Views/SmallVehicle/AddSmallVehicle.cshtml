@model EntityLayer.Concrete.SmallVehicle
@{
    ViewData["Title"] = "AddSmallVehicle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">KÜÇÜK ARAÇ EKLEME SAYFASI</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->


    @using (Html.BeginForm("AddSmallVehicle", "SmallVehicle", FormMethod.Post))
    {


        

        <div class="row">
            <div class="col-12 col-sm-6">

                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Kişi Bilgileri</h3>
                    </div>
                    <div class="card-body">
                        <!-- Date dd/mm/yyyy -->


                        <div class="form-group">
                            <label>Ad  :</label>

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-laptop"></i></span>
                                </div>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

                            </div>
                            <!-- /.input group -->
                        </div>
                        <div class="form-group">
                            <label>Soyad  :</label>

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-laptop"></i></span>
                                </div>
                                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })

                            </div>
                            <!-- /.input group -->
                        </div>
                        <div class="form-group">
                            <label>Aracın Plakaları:</label>

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-laptop"></i></span>
                                </div>
                                @Html.TextBoxFor(x => x.Plaka, new { @class = "form-control" })

                            </div>
                            <!-- /.input group -->
                        </div>
                        <!-- /.form group -->
                        <!-- Date mm/dd/yyyy -->
                        <div class="form-group">
                            <div class="input-group">
                                <label>Telefon No:</label>
                                <div class="input-group">

                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                    </div>
                                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })

                                </div>
                            </div>
                            <!-- /.input group -->
                        </div>
                        <!-- /.form group -->
                        <!-- phone mask -->
                        <div class="form-group">
                            <label>Vergi No:</label>

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-book"></i></span>
                                </div>
                                @Html.TextBoxFor(x => x.VergiNo, new { @class = "form-control" })

                            </div>
                            <!-- /.input group -->
                        </div>


                        <!-- /.form group -->
                        <!-- phone mask -->
                        <div class="form-group">
                            <label>Arac Tipi:</label>

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-calculator"></i></span>
                                </div>
                                @Html.TextBoxFor(x => x.SmallVehicleType, new { @class = "form-control" })

                            </div>
                            <!-- /.input group -->
                        </div>



                        <!-- /.form group -->
                        <!-- IP mask -->
                        <!-- /.form group -->

                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            <div class="col-12 col-sm-6">
                <div class="col-md-6 contact-map" style="font-size:0px;">

                    <p style="font-size:10px;">  <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d99665.02884374019!2d35.46260811879834!3d38.68261887983845!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x152b0fbebe772faf%3A0x4a5a30f39c34c460!2sYilanli%20Da%C4%9F!5e0!3m2!1str!2str!4v1647519561490!5m2!1str!2str" width="630" height="600" style="border:0;" allowfullscreen="" loading="lazy"></iframe></p>
                </div>
            </div>
            <!-- /.col -->

        </div>
        <!-- /.row -->



        <button class="btn btn-info" style="margin-left:600px;"> + Aracı Kaydet</button>
        <br />
        <br />
        <br />
    }




