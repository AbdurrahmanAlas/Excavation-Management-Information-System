@using EntityLayer.Concrete
@model List<Structure>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card  card-warning card-outline">
    <div class="card-header">
        <h3 class="card-title" style="color:blue"><b> YAPI RUHSATLI İŞ TALEPLERİ LİSTESİ</b>  <a href="/Structure/StructureAdd" class="badge btn-success" style="margin-left:800px;font-size:18px;"> +Yapı Ruhsat Talebi Ekle</a></h3>

    </div>
    <h2 class="card-title"style="margin-left:110px"><b> </b> <b class="btn btn-success">KAZI TOPLAM : @ViewBag.kazıtoplam m^3 </b> </h2>
    <br />
    <h2 class="card-title" style="margin-left:110px"><b> </b> <b class="btn btn-danger">DOLGU TOPLAM : @ViewBag.dolgutoplam  m^3</b> </h2>
    <br /><!-- /.card-header -->
    <div class="card-body card  card-warning card-outline">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr style="background-color:#f8eabb">
                    <th>Firma Adı</th>

                    <th>Ruhsat No</th>
                    <th>Üretici Adı</th>

                    <th>Onay Tarihi</th>
                    <th>Üretici Adres</th>
                    <th>İlçe<br />Ada/Parsel</th>


                    <th>Kazı/Dolgu(m3)</th>
                    <th>FirmaDetay</th>
                    <th>Güncelle</th>
                    <th>Sil</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model)
                {
                    <tr>
                        <td><b>» @k.Company.CompanyName</b></td>





                        <td>@k.PermitNumber</td>

                        <td>@k.ÜreticiName</td>
                        <td>
                            @(((DateTime)
                          k.OnayDate).ToString("dd-MMM-yyyy"))
                        </td>
                        <td>@k.ÜreticiAddress</td>
                        <td>
                            @k.District<br />
                            @k.Island/@k.Parcel
                        </td>


                        <td>Dolgu:@k.Dolgu<br />Kazı:@k.Kazı</td>



                        <td>
                            <a href="/Company/CompanyReadAll/@k.StructureId" class="badge btn-primary" style="font-size: 14px;">✚FirmaDetay</a>


                        </td>

                        <td>
                            <a href="/Structure/EditStructure/@k.StructureId" class="badge btn-info" style="font-size: 15px;" }>Güncelle</a>
                        </td>
                        <td>
                            <a href="/Structure/DeleteStructure/@k.StructureId" class="badge btn-danger" style="font-size: 15px;" , new { onclick="return confirm('Silmek istiyor musunuz?')" }>Sil</a>
                        </td>




                    </tr>
                }
            </tbody>
            <tfoot>
                <tr style="background-color:#f8eabb">
                    <th>Firma Adı</th>

                    <th>Ruhsat No</th>
                    <th>Üretici Adı</th>

                    <th>Onay Tarihi</th>
                    <th>Üretici Adres</th>
                    <th>İlçe<br />Ada/Parsel</th>


                    <th>Kazı/Dolgu(m3)</th>
                    <th>FirmaDetay</th>
                    <th>Güncelle</th>
                    <th>Sil</th>


                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>





