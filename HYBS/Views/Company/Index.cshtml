

@using EntityLayer.Concrete
@model List<Company>
@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }








<div class="card  card-success card-outline">
    <div class="card-header">
        <h3 class="card-title" style="color:blue"><b> HAFRİYAT FİRMALARI LİSTESİ</b><a href="/CompanyBalance/CompanyBalanceAdd" class="badge btn-warning" style="margin-left:600px;font-size:18px;"> +Firmaya Bakiye Yükle</a> <a href="/Company/CompanyAdd" class="badge btn-primary" style="margin-left:800px;font-size:18px;"> +Yeni Firma Ekle</a></h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body card  card-success card-outline">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Firma Adı</th>
                    <th>Vergi No</th>
                    <th>Vergi Dairesi</th>
                    <th>FirmaTip</th>

                    <th>Firma Address</th>
                    <th>FirmaEmail</th>

                    <th>FirmaGrup</th>
                    <th>KalanAraçBakiye(ADET)</th>
                    <th>FirmaDetay</th>
                    <th>Güncell/Sil</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model)
                {
    <tr>
        <td><b>@k.CompanyName</b></td>




        <td>@k.TexNumber</td>
        <td>@k.CompanyTaxOffice</td>

        <td>@k.CompanyTip</td>
        <td>@k.CompanyAddress</td>
        <td>@k.CompanyEmail</td>
        <td>@k.CompanyGroup</td>
        <td style="color:red" class="text-center"><h5><b>@k.CompanyBalance  </b></h5></td>

        <td><a href="/Company/CompanyReadAll/@k.CompanyId" class="badge btn-primary" style="font-size: 14px;">✚FirmaDetay</a></td>

        <td>
            <a href="/Company/EditCompany/@k.CompanyId" class="badge btn-info" style="font-size: 15px;" }>Güncelle</a>
            <a href="/Company/DeleteCompany/@k.CompanyId" class="badge btn-danger" style="font-size: 15px;" , new { onclick="return confirm('Silmek istiyor musunuz?')" }>Sil</a>
        </td>




    </tr>
}
            </tbody>
            <tfoot>
                <tr>
                    <th>Firma Adı</th>
                    <th>Vergi No</th>
                    <th>Vergi Dairesi</th>
                    <th>FirmaTip</th>

                    <th>FirmaAddress</th>
                    <th>FirmaEmail</th>

                    <th>FirmaGrup</th>
                    <th>KalanAraçBakiye</th>
                    <th>FirmaDetay</th>
                    <th>Güncell/Sil</th>

                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>

@await Component.InvokeAsync("VehicleList")




