@model IEnumerable<EntityLayer.Concrete.Company>

@{
    ViewData["Title"] = "CompanyReadAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@foreach (var item in Model)
{





    <div class="card card-primary card-outline">
        <div class="card-body box-profile"style="background-color:#f6edd2">




            <div class="row" >
                <div class="col-md-2">

                    <div class="text-center">
                       
                        <img src="~/yenilayout/dist/img/AdminLTELogo.png" />


                    </div>

                    <h3 class="profile-username text-center">@item.CompanyName</h3>
                    <h3 class="profile-username text-center">
                        @ViewBag.k</h3>

                        <p class="text-muted text-center">@item.CompanyGroup</p>



</div>
                <div class="col-md-5 card card-success card-outline">

                    <ul class="list-group list-group-unbordered mb-3 ">
                        <li class="list-group-item">
                            <b><i class="fas fa-address-book mr-1"></i>Adres :</b> <a class="float-right" >@item.CompanyAddress</a>
                        </li>
                        <li class="list-group-item">
                            <b><i class="fas fa-pencil-alt mr-1"></i>Vergi No:</b> <a class="float-right">@item.TexNumber</a>
                        </li>
                        <li class="list-group-item">
                            <b><i class="fas fa-phone mr-1"></i>TelefonNo :</b> <a class="float-right">@item.EmployeePhone</a>
                        </li>

                    </ul>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-4 card card-success card-outline">
                    <ul class="list-group list-group-unbordered mb-3">
                        <li class="list-group-item">
                            <b><i class="fas fa-pencil-alt mr-1"></i>Email Adres :</b> <a class="float-right"><i class="fas fa-mail-forward mr-1"></i>@item.CompanyEmail</a>
                        </li>
                        <li class="list-group-item">
                            <b><i class="fas fa-tablet-alt mr-1"></i>Firma Tipi  :</b> <a class="float-right"><i class="fas fa-address-book mr-1"></i>@item.CompanyTip</a>
                        </li>
                        <li class="list-group-item">
                            <b><i class="fas fa-book-alt mr-1"></i>Vergi Dairesi :</b> <a class="float-right">@item.CompanyTaxOffice</a>
                        </li>

                    </ul>
                </div>
            </div>


            <a href="/Company/EditCompany/@item.CompanyId" class="btn btn-primary btn-block text-center" style="max-width:20%;margin-left:550px;"><b>🔰 Güncelle </b></a>
            <a href="/CompanyBalance/CompanyBalanceAdd/@item.CompanyId" class="btn btn-info btn-block text-center" style="max-width:20%;margin-left:800px;"><b>➤ Bakiye Yükle </b></a>
            <a href="/CompanyBalance/CompanyBalanceAdd/@item.CompanyId" class="btn btn-dark btn-block text-center" style="max-width:20%;border:unset;margin-left:800px;">KALAN BAKİYE:<b> @item.CompanyBalance ADET </b></a>
        </div>
        <!-- /.card-body -->
    </div>


}
<div class="card card-primary card-outline col-md-12">
    <div class="card">
        <div class="card-header p-2">
            <ul class="nav nav-pills">
                <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Araç Listesi</a></li>
                <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Ceza Listesi</a></li>
                <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Firma Belgeleri</a></li>
                <li class="nav-item"><a class="nav-link" href="#aracbelge" data-toggle="tab">Araç Belgeleri</a></li>
                <li class="nav-item"><a class="nav-link" href="#Tib" data-toggle="tab">Yapı Ruhsatlı işlemler</a></li>
            </ul>
        </div><!-- /.card-header -->
        <div class="card-body">
            <div class="tab-content">
                <div class="active tab-pane" id="activity">
                    <!-- Post -->
                    @await Component.InvokeAsync("VehicleListByCompany", new { id = ViewBag.i })

                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="timeline">
                    <!-- The timeline -->
                    @await Component.InvokeAsync("CezaListByCompany", new { id = ViewBag.x })
                </div>
                <!-- /.tab-pane -->
               
                <div class="tab-pane" id="settings">
                    <h3>FİRMA BELGELERİ   <td><span class="badge bg-success" style="font-size:14px;"><a href="/Company/CompanyDocumentAdd">Belge Ekle</a></span></td></h3>
                    @await Component.InvokeAsync("DocumentListByCompany", new { id = ViewBag.y })
                </div>
                <div class="tab-pane" id="aracbelge">
                    @await Component.InvokeAsync("DocumentListByCompany", new { id = ViewBag.y })
                </div>
                <div class="tab-pane" id="Tib">
                    @await Component.InvokeAsync("StructureListByCompany", new { id = ViewBag.z })
                </div>
                <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
        </div><!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>

